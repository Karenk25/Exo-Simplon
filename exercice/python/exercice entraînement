nom = input("Entrer votre nom : ")
Message = nom
a_crypter= Message.upper()
lg=len(a_crypter)
MessageCrypte=""
for i in range(lg):
    if a_crypter[i]==' ':
        MessageCrypte+=' '
    else:
        asc=ord(a_crypter[i])+3
        MessageCrypte+=chr(ord(a_crypter[i])+3)
        print (MessageCrypte)
nom_crypter = input("Entrer nom crypter")
MessageCrypte = nom_crypter
lg=len(MessageCrypte)
MessageClair=""
for i in range(lg):
    if MessageCrypte[i]==' ':
        MessageClair+=' '
    else:
        asc=ord(MessageCrypte[i])-3
        MessageClair+=chr(ord(MessageCrypte[i])-3)

print (MessageClair)


