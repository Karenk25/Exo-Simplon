CodeWeb = "<html><head><title>Mon Titre</title></head><body>Texte sur la page</body></html>"

for i in CodeWeb, i:
    if i == "<":
        CodeWeb.find(">")
        print(CodeWeb[1:5])
        print(CodeWeb[7:11])
        print(CodeWeb[13:18])
        print(CodeWeb[19:28])
        print(CodeWeb[30:35])
        print(CodeWeb[38:42])
        print(CodeWeb[44:48])
        print(CodeWeb[49:66])
        print(CodeWeb[68:72])
        print(CodeWeb[75:79])
       



#Dans une boucle for tu doit mettre un if avec pour condition si le caractère est le symbole "<"
#alors là tu utilise le find pour chercher le symbole ">"


