#6
n = input("Entrez un mot : ").upper()
liste_voyelle = ["A", "E", "I", "O", "U", "Y"]
nb_voyelles = 0
compteur_consonnes = 0

for lettre in n:
    if lettre in liste_voyelle:
        nb_voyelles += 1      
        print(lettre, "est une voyelle")
    else:
        print (lettre, "est une consonne")
        compteur_consonnes += 1
print(n, "possède", len(n), "lettres")
print("Totale de", nb_voyelles, "voyelles, et de", compteur_consonnes, "consonnes")


